<%- include('partials/header') -%>
<div class="container-fluid">
    <div class="row text-center p-4">
        <div class="col-md-3">
            <div class="col-md-6">
                <h1>Oops...</h1>
                <p class="lead">Your email or password are wrong!</p>
                <p>Try Again: </p>
                <form action="/signin" method="POST">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h4 class="modal-title">Sign In</h4>
                                <button class="btn-close" type="button" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <div class="form-group py-2">
                                    <label for="email" class="label">Email Address</label>
                                    <input type="email" class="form-control my-2 p-2 input" name="username">
                                </div>
                                <div class="form-group py-2">
                                    <label for="password" class="label">Password</label>
                                    <input type="password" class="form-control my-2 p-2 input" name="password">
                                </div>
                            </div>
                            <div class="modal-footer justify-content-start">
                                <button class="btn" type="submit" style="background-color: #318fb5;">Sign in</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>