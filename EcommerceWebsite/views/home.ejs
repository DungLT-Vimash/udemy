<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <h2 class="heading-section mb-3 pb-md-4">Brands</h2>
            <p class="lead mb-5">Check out our  various Brands</p>
        </div>

        <div class="col-md-12">
            <div class="featured-carousel owl-carousel">
                <div class="row"></div>
                <%brandss.forEach(function(brand){%>
                    
                        <div class="col-4">
                            <div class="item">
                                <div class="work">
                                    <form action="/products" method="POST">
                                        <button type="submit" class="btn">
                                            <div class="card text-center" style="width: 18rem;">
                                                <img src=<%=brand.img%> alt="">
                                            </div>
                                            <div class="card-body">
                                                <h6 class="card-text">
                                                    <%= brand.brand %>
                                                </h6>
                                            </div>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        
                   
                    
                <% })%>
                </div>
            </div>
        </div>
    </div>
</div>
