<%- include('partials/header') -%>
<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-0 col-lg-1">

            </div>
            <div class="col-6 col-lg-4 align-items center">
                <img src=<%=item[0].imgUrl%> style="max-width: 300px;" alt="">
            </div>
            <div class="col-lg-1"></div>
            <div class="col-6 col-lg-4">
                <form action="shipping" method="POST">
                    <h2 class="text-info"><%=item[0].title%></h2>
                    <p class="small"><%=item[0].description%></p>
                    <p class="h5">Price:  <span class="text-secondary"><%=item[0].price%></span></p>
                    <p><span class="font-weight-bold">Brand: </span><%=item[0].brand%></p>
                    <p><span class="font-weight-bold">Category: </span><%=item[0].category%></p>
                    <br>
                    <div class="row">
                        <div class="col-2 mt-2">
                            <p class="text-secondary h6">Size</p>
                        </div>
                        <div class="col-2">
                            <p class="lead"><%=item[0].size%>ML</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="input-group mb-3">
                                <input type="text" name="box" placeholder="Qty" class="form-control">
                                <div class="input-group-append">
                                    <span class="input-group-text">Pieces</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="my-3">
                        <input type="hidden" name="title" value=<%=item.title%>>
                        <input type="hidden" name="img" value=<%=item.imgUrl%>>
                        <input type="hidden" name="price" value=<%=item.price%>>
                        <input type="hidden" name="size" value=<%=item.size%>>
                        <button type="submit" data-bs-toggle="" style="display: inline-block;" class="btn btn-dark">Add To Card</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('partials/footer') -%>